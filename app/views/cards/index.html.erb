<div class="index">
<p id="notice"><%= notice %></p>

<h1>Listing Cards</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Subtitle</th>
      <th>Photo</th>
      <th>Date</th>
      <th>Type</th>
      <th>Tag</th>
      <th>Url</th>
      <th>Source</th>
      <th>Source Name</th>
      
      <th>Sponsor</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.title %></td>
        <td><%= card.subtitle %></td>
        <td><%= card.photo %></td>
        <td><%= card.publish_date %></td>
        <td><%= card.card_type %></td>
        <td><%= card.tag %></td>
        <td><%= card.card_url %></td>
        <td><%= card.source %></td>
        <td><%= card.source_name %></td>
        <td><%= card.sponsor %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Card', new_card_path, class: "btn btn-primary btn-lg" %>
</div>
